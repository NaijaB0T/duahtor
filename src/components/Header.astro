---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<nav id="main-nav" class="nav-initial fixed top-0 w-full z-50 transition-all duration-300">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="flex items-center justify-between h-16 lg:h-20">
			<!-- Logo -->
			<div class="flex-shrink-0">
				<a href="/" class="logo-link">
					<img 
						src="/images/duahtor-logo_balck-and-white_.png" 
						alt="DUAHTOR - AI Learning Companion" 
						class="logo-image"
						loading="eager"
					/>
				</a>
			</div>

			<!-- Desktop Navigation - Centered -->
			<div class="hidden md:flex flex-1 justify-center">
				<div class="flex items-baseline space-x-6">
					<HeaderLink href="/" class="nav-link">Home</HeaderLink>
					<a href="/#how-it-works" class="nav-link">How It Works</a>
					<a href="/#who-its-for" class="nav-link">Who It's For</a>
					<a href="/#features" class="nav-link">Features</a>
					<a href="/#waitlist" class="nav-link">Join Waitlist</a>
					<HeaderLink href="/our-story" class="nav-link">Our Story</HeaderLink>
					<a href="/#contact" class="nav-link">Contact</a>
				</div>
			</div>

			<!-- CTA Button -->
			<div class="hidden md:block flex-shrink-0">
				<a href="#waitlist" class="btn btn-primary btn-compact">
					Join the Waitlist
				</a>
			</div>

			<!-- Mobile menu button -->
			<div class="md:hidden">
				<button 
					id="mobile-menu-button" 
					type="button" 
					class="mobile-menu-btn"
					aria-expanded="false"
					aria-controls="mobile-menu"
					aria-label="Toggle navigation menu"
				>
					<span class="sr-only">Open main menu</span>
					<div class="hamburger-icon">
						<span></span>
						<span></span>
						<span></span>
					</div>
				</button>
			</div>
		</div>
	</div>

	<!-- Mobile Navigation Menu -->
	<div 
		id="mobile-menu" 
		class="md:hidden mobile-menu-hidden"
		role="navigation"
		aria-label="Mobile navigation"
	>
		<div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white/95 backdrop-blur-md border-t border-gray-200">
			<HeaderLink href="/" class="mobile-nav-link">Home</HeaderLink>
			<a href="/#how-it-works" class="mobile-nav-link">How It Works</a>
			<a href="/#who-its-for" class="mobile-nav-link">Who It's For</a>
			<a href="/#features" class="mobile-nav-link">Features</a>
			<a href="/#waitlist" class="mobile-nav-link">Join Waitlist</a>
			<HeaderLink href="/our-story" class="mobile-nav-link">Our Story</HeaderLink>
			<a href="/#contact" class="mobile-nav-link">Contact</a>
			<div class="pt-4">
				<a href="/#waitlist" class="btn btn-primary w-full text-center">
					Join the Waitlist
				</a>
			</div>
		</div>
	</div>
</nav>
<style>
	/* Navigation Initial State (Transparent) */
	.nav-initial {
		background: transparent;
		backdrop-filter: none;
		border-bottom: none;
	}

	/* Navigation Scrolled State (Glassmorphism) */
	.nav-scrolled {
		backdrop-filter: blur(16px);
		background: rgba(255, 255, 255, 0.85);
		border-bottom: 1px solid rgba(255, 255, 255, 0.2);
		box-shadow: var(--shadow-lg);
	}

	/* Logo Styles */
	.logo-link {
		text-decoration: none;
		transition: all 0.3s ease;
		display: flex;
		align-items: center;
		height: 100%;
		overflow: hidden;
	}

	.logo-link:hover {
		transform: scale(1.05);
	}
	
	.logo-image {
		height: 4rem; /* 64px for mobile (original size) */
		width: auto;
		transition: all 0.3s ease;
	}

	/* Navigation Links - Updated for accessible colors */
	nav .nav-link,
	nav a.nav-link {
		color: var(--color-charcoal-gray) !important;
		text-decoration: none !important;
		font-weight: 500 !important;
		font-size: 0.875rem !important;
		padding: 0.5rem 0 !important;
		position: relative !important;
		transition: all 0.3s ease !important;
		display: inline-block !important;
		opacity: 1 !important;
		visibility: visible !important;
	}

	nav .nav-link:hover,
	nav a.nav-link:hover {
		color: var(--color-prussian-blue) !important;
		text-decoration: none !important;
	}

	/* Active link underline effect */
	nav .nav-link::after,
	nav a.nav-link::after {
		content: '' !important;
		position: absolute !important;
		bottom: -2px !important;
		left: 0 !important;
		width: 0 !important;
		height: 2px !important;
		background-color: var(--color-mango-tango) !important;
		transition: width 0.3s ease !important;
	}

	nav .nav-link:hover::after,
	nav .nav-link.active::after,
	nav a.nav-link:hover::after,
	nav a.nav-link.active::after {
		width: 100% !important;
	}

	/* Mobile Menu Button */
	.mobile-menu-btn {
		background: none;
		border: none;
		cursor: pointer;
		padding: 0.5rem;
	}

	/* Hamburger Icon */
	.hamburger-icon {
		width: 24px;
		height: 18px;
		position: relative;
		cursor: pointer;
	}

	.hamburger-icon span {
		display: block;
		position: absolute;
		height: 2px;
		width: 100%;
		background: var(--color-charcoal-gray);
		border-radius: 1px;
		opacity: 1;
		transition: all 0.25s ease-in-out;
	}

	.hamburger-icon span:nth-child(1) {
		top: 0px;
	}

	.hamburger-icon span:nth-child(2) {
		top: 8px;
	}

	.hamburger-icon span:nth-child(3) {
		top: 16px;
	}

	/* Mobile Menu */
	.mobile-menu-hidden {
		display: none;
	}

	.mobile-menu-visible {
		display: block;
	}

	.mobile-nav-link {
		display: block;
		color: var(--color-charcoal-gray) !important;
		text-decoration: none;
		font-weight: 500;
		padding: 0.75rem 1rem;
		border-radius: 0.75rem;
		transition: all 0.3s ease;
	}

	.mobile-nav-link:hover {
		background-color: var(--color-off-white);
		color: var(--color-prussian-blue) !important;
	}

	/* Responsive adjustments for different nav states */
	@media (max-width: 767px) {
		.nav-scrolled {
			background: rgba(255, 255, 255, 0.95);
		}
	}

	/* Mobile First Responsive Navigation */
	
	/* Mobile (up to 640px) */
	@media (max-width: 639px) {
		.h-16 { height: 3.5rem; }
		.px-4 { padding-left: 0.75rem; padding-right: 0.75rem; }
		.text-2xl { font-size: 1.125rem; }
		
		.mobile-menu-btn {
			min-width: 44px;
			min-height: 44px;
		}
		
		.btn {
			min-height: 44px;
			padding: 0.75rem 1rem;
			font-size: 0.875rem;
		}

		.mobile-nav-link {
			min-height: 44px;
			padding: 0.875rem 1rem;
		}
	}

	/* Small devices (640px and up) */
	@media (min-width: 640px) {
		.sm\:px-6 { padding-left: 1.5rem; padding-right: 1.5rem; }
		.sm\:px-3 { padding-left: 0.75rem; padding-right: 0.75rem; }
		.h-16 { height: 4rem; }
		.text-2xl { font-size: 1.25rem; }
	}

	/* Medium devices (768px and up) */
	@media (min-width: 768px) {
		.md\:block { display: block !important; }
		.md\:flex { display: flex !important; }
		.md\:hidden { display: none !important; }
		.text-2xl { font-size: 1.5rem; }
		
		.logo-image {
			height: 6rem; /* 80px for tablet (original size) */
		}
		
		/* Ensure desktop navigation is visible */
		nav .hidden.md\:block,
		nav .hidden.md\:flex {
			display: flex !important;
			visibility: visible !important;
			opacity: 1 !important;
		}
		
		/* Force desktop nav links to be visible */
		nav .hidden.md\:block .nav-link,
		nav .hidden.md\:block a.nav-link,
		nav .hidden.md\:flex .nav-link,
		nav .hidden.md\:flex a.nav-link {
			color: var(--color-charcoal-gray) !important;
			display: inline-block !important;
			visibility: visible !important;
			opacity: 1 !important;
		}
	}

	/* Large devices (1024px and up) */
	@media (min-width: 1024px) {
		.lg\:h-20 { height: 5rem; }
		.lg\:text-3xl { font-size: 1.875rem; }
		.lg\:px-8 { padding-left: 2rem; padding-right: 2rem; }
		
		.logo-image {
			height: 10rem; /* 96px for desktop (original size) */
		}
	}

	/* Utility classes for Tailwind-like functionality */
	.fixed { position: fixed; }
	.top-0 { top: 0; }
	.w-full { width: 100%; }
	.z-50 { z-index: 50; }
	.max-w-7xl { max-width: 80rem; }
	.mx-auto { margin-left: auto; margin-right: auto; }
	.px-4 { padding-left: 1rem; padding-right: 1rem; }
	.px-2 { padding-left: 0.5rem; padding-right: 0.5rem; }
	.py-4 { padding-top: 1rem; padding-bottom: 1rem; }
	.pt-2 { padding-top: 0.5rem; }
	.pt-4 { padding-top: 1rem; }
	.pb-3 { padding-bottom: 0.75rem; }
	.flex { display: flex; }
	.hidden { display: none !important; }
	.items-center { align-items: center; }
	.items-baseline { align-items: baseline; }
	.justify-between { justify-content: space-between; }
	.flex-shrink-0 { flex-shrink: 0; }
	.space-x-8 > * + * { margin-left: 2rem; }
	.space-x-6 > * + * { margin-left: 1.5rem; }
	.flex-1 { flex: 1; }
	.justify-center { justify-content: center; }
	.flex-shrink-0 { flex-shrink: 0; }
	
	/* Compact button for header */
	.btn-compact {
		padding: 0.5rem 1rem !important;
		font-size: 0.875rem !important;
		font-weight: 500 !important;
	}
	.space-y-1 > * + * { margin-top: 0.25rem; }
	.ml-10 { margin-left: 2.5rem; }
	.text-center { text-align: center; }
	.font-bold { font-weight: 700; }
	.transition-all { transition-property: all; }
	.duration-300 { transition-duration: 300ms; }
	.border-t { border-top-width: 1px; }
	.border-gray-200 { border-color: #e5e7eb; }
	.backdrop-blur-md { backdrop-filter: blur(12px); }
</style>

<script>
	// Navigation scroll effect
	function handleNavScroll() {
		const nav = document.getElementById('main-nav');
		if (!nav) return;

		if (window.scrollY > 50) {
			nav.classList.remove('nav-initial');
			nav.classList.add('nav-scrolled');
		} else {
			nav.classList.remove('nav-scrolled');
			nav.classList.add('nav-initial');
		}
	}

	// Mobile menu toggle
	function toggleMobileMenu() {
		const mobileMenu = document.getElementById('mobile-menu');
		const menuButton = document.getElementById('mobile-menu-button');
		
		if (!mobileMenu || !menuButton) return;

		const isHidden = mobileMenu.classList.contains('mobile-menu-hidden');
		
		if (isHidden) {
			mobileMenu.classList.remove('mobile-menu-hidden');
			mobileMenu.classList.add('mobile-menu-visible');
			menuButton.setAttribute('aria-expanded', 'true');
			menuButton.querySelector('.sr-only').textContent = 'Close main menu';
		} else {
			mobileMenu.classList.remove('mobile-menu-visible');
			mobileMenu.classList.add('mobile-menu-hidden');
			menuButton.setAttribute('aria-expanded', 'false');
			menuButton.querySelector('.sr-only').textContent = 'Open main menu';
		}
	}

	// Handle keyboard events for accessibility
	function handleKeyPress(event) {
		if (event.key === 'Escape') {
			const mobileMenu = document.getElementById('mobile-menu');
			const menuButton = document.getElementById('mobile-menu-button');
			
			if (mobileMenu && !mobileMenu.classList.contains('mobile-menu-hidden')) {
				mobileMenu.classList.remove('mobile-menu-visible');
				mobileMenu.classList.add('mobile-menu-hidden');
				if (menuButton) {
					menuButton.setAttribute('aria-expanded', 'false');
					menuButton.querySelector('.sr-only').textContent = 'Open main menu';
					menuButton.focus();
				}
			}
		}
	}

	// Initialize event listeners
	document.addEventListener('DOMContentLoaded', function() {
		// Scroll event listener
		window.addEventListener('scroll', handleNavScroll);
		
		// Keyboard event listener
		document.addEventListener('keydown', handleKeyPress);
		
		// Mobile menu button event listener
		const mobileMenuButton = document.getElementById('mobile-menu-button');
		if (mobileMenuButton) {
			mobileMenuButton.addEventListener('click', toggleMobileMenu);
		}

		// Close mobile menu when clicking on a link
		const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
		mobileNavLinks.forEach(link => {
			link.addEventListener('click', () => {
				const mobileMenu = document.getElementById('mobile-menu');
				const menuButton = document.getElementById('mobile-menu-button');
				if (mobileMenu) {
					mobileMenu.classList.remove('mobile-menu-visible');
					mobileMenu.classList.add('mobile-menu-hidden');
					if (menuButton) {
						menuButton.setAttribute('aria-expanded', 'false');
						menuButton.querySelector('.sr-only').textContent = 'Open main menu';
					}
				}
			});
		});
	});
</script>
