										<div class="gamification-mockup">
											<div class="achievement-notification">
												<div class="achievement-icon">🏆</div>
												<div class="achievement-text">
													<h4>Math Master!</h4>
													<p>Completed 10 algebra problems</p>
												</div>
											</div>
											<div class="progress-section">
												<div class="level-info">
													<span class="level">Level 5</span>
													<div class="xp-bar">
														<div class="xp-fill" style="width: 70%"></div>
													</div>
													<span class="xp-text">70/100 XP</span>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Early Feedback Section -->
			<section class="early-feedback-section" aria-labelledby="early-feedback-title">
				<div class="container">
					<div class="section-header">
						<h2 id="early-feedback-title" class="section-title">
							Early Feedback from Real Beta Users
						</h2>
					</div>
					
					<div class="testimonials-grid">
						<!-- Parent Testimonial -->
						<div class="testimonial-card">
							<div class="testimonial-content">
								<div class="quote-icon" aria-hidden="true">"</div>
								<blockquote class="testimonial-quote">
									I never thought my daughter would understand math without a tutor. But with DUAHTOR, she's explaining topics to ME!
								</blockquote>
								<div class="testimonial-author">
									<div class="author-avatar">
										<div class="avatar-placeholder">👩</div>
									</div>
									<div class="author-info">
										<cite class="author-name">Josephine</cite>
										<p class="author-role">Parent, Kakata</p>
									</div>
