	// Waitlist form handling
	function handleWaitlistForm(event) {
		event.preventDefault();
		
		const form = event.target;
		const formData = new FormData(form);
		const submitButton = form.querySelector('button[type="submit"]');
		
		// Disable button and show loading state
		submitButton.disabled = true;
		submitButton.textContent = 'Joining...';
		
		// In a real implementation, you would send this data to your backend
		console.log('Waitlist form data:', Object.fromEntries(formData));
		
		// Simulate API call
		setTimeout(() => {
			submitButton.textContent = '✅ Successfully Joined!';
			submitButton.style.background = 'var(--color-mango-tango)';
			
			// Reset after 3 seconds
			setTimeout(() => {
				submitButton.disabled = false;
				submitButton.textContent = 'Join the Waitlist';
				submitButton.style.background = '';
				form.reset();
			}, 3000);
		}, 1000);
	}

	// Payment method selection
	function initializePaymentMethods() {
		const paymentMethods = document.querySelectorAll('.payment-method');
		let selectedMethod = null;

		paymentMethods.forEach(method => {
			method.addEventListener('click', () => {
				// Remove selected class from all methods
				paymentMethods.forEach(m => m.classList.remove('selected'));
				
				// Add selected class to clicked method
				method.classList.add('selected');
				selectedMethod = method.getAttribute('data-method');
				
				// Update supporter button text based on selection
				const supporterBtn = document.getElementById('become-supporter-btn');
				if (supporterBtn) {
					const methodName = method.querySelector('.payment-name').textContent;
					supporterBtn.textContent = `Pay with ${methodName}`;
				}
			});
		});

		// Handle supporter button click
		const supporterBtn = document.getElementById('become-supporter-btn');
		if (supporterBtn) {
			supporterBtn.addEventListener('click', () => {
				if (!selectedMethod) {
					alert('Please select a payment method first.');
					return;
				}

				const joinWaitlist = document.getElementById('join-waitlist-checkbox').checked;
				
				// In a real implementation, you would integrate with payment providers
				console.log('Payment initiated:', {
					method: selectedMethod,
					amount: 29,
					currency: 'USD',
					joinWaitlist: joinWaitlist
				});

				// Simulate payment process
				supporterBtn.disabled = true;
				supporterBtn.textContent = 'Processing Payment...';
				
				setTimeout(() => {
					supporterBtn.textContent = '✅ Thank You, Founding Supporter!';
					supporterBtn.style.background = 'var(--color-mango-tango)';
				}, 2000);
			});
		}
	}

	// Initialize all functionality when DOM is loaded
	document.addEventListener('DOMContentLoaded', function() {
		initializeFeatureAnimations();
		initializePaymentMethods();
		
		// Add escape key listener for modal
		document.addEventListener('keydown', handleKeyPress);
		
		// Initialize modal opacity
		const modal = document.getElementById('pricing-modal');
		if (modal) {
			modal.style.opacity = '0';
			modal.style.transition = 'opacity 0.3s ease';
		}

		// Initialize waitlist form
		const waitlistForm = document.getElementById('waitlist-form');
		if (waitlistForm) {
			waitlistForm.addEventListener('submit', handleWaitlistForm);
		}
	});

	// Make functions globally available
	window.openPricingModal = openPricingModal;
	window.closePricingModal = closePricingModal;
</script>
