---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="DUAHTOR - Liberia's First AI Learning Companion" description="Join thousands of Liberian students transforming their learning experience with AI-powered tutoring. Get instant homework help, personalized lessons, and 24/7 academic support." />
	</head>
	<body>
		<!-- Skip to main content link for keyboard navigation -->
		<a href="#main-content" class="skip-link">Skip to main content</a>
		<Header />
		
		<!-- Main Content -->
		<main id="main-content">
			<!-- Hero Section -->
			<section class="hero-section" aria-labelledby="hero-title">
				<!-- Split Background Images -->
				<div class="hero-split-background">
					<div class="hero-background-half hero-background-before">
						<img 
							src="/images/A Liberian student alone with a textbook, looking confused..jpg" 
							alt="A Liberian student alone with a textbook, looking confused" 
							class="hero-bg-image"
							loading="eager"
						/>
						<div class="background-label before-label">Before</div>
						
						<!-- Left Pain Points -->
						<div class="side-pain-points left-pain-points">
							<div class="pain-point-card fade-in-up" style="animation-delay: 0.2s">
								<div class="pain-icon" aria-hidden="true">🗣</div>
								<span class="pain-text">Struggling with homework?</span>
							</div>
							<div class="pain-point-card fade-in-up" style="animation-delay: 0.4s">
								<div class="pain-icon" aria-hidden="true">👩</div>
								<span class="pain-text">Too many students, too few teachers?</span>
							</div>
						</div>
					</div>
					<div class="hero-background-half hero-background-after">
						<img 
							src="/images/Same student, still in same setting, now confidently learning with DUAHTOR on a tablet.jpg" 
							alt="Same student, still in same setting, now confidently learning with DUAHTOR on a tablet" 
							class="hero-bg-image"
							loading="eager"
						/>
						<div class="background-label after-label">After</div>
						
						<!-- Right Pain Points -->
						<div class="side-pain-points right-pain-points">
							<div class="pain-point-card fade-in-up" style="animation-delay: 0.6s">
								<div class="pain-icon" aria-hidden="true">📚</div>
								<span class="pain-text">Can't afford tutoring?</span>
							</div>
							<div class="pain-point-card fade-in-up" style="animation-delay: 0.8s">
								<div class="pain-icon" aria-hidden="true">🌐</div>
								<span class="pain-text">No reliable internet?</span>
							</div>
						</div>
					</div>
				</div>
				
				<!-- Top Hero Text -->
				<div class="hero-top-content">
					<div class="container">
						<div class="hero-welcome-section">
							<div class="hero-welcome">Welcome to a New Chapter in Learning</div>
							<h1 id="hero-title" class="hero-title">
								Liberia, Meet Your First 
								<span class="text-gradient">AI Learning Companion</span>
							</h1>
							<p class="hero-subheadline">
								Education is finally catching up to you — not the other way around.
							</p>
						</div>
					</div>
				</div>
				
				<!-- Bottom Hero Content -->
				<div class="hero-overlay">
					<div class="container">
						<div class="hero-content-center">
							<div class="hero-text-container">
								<div class="duahtor-promise">
									<strong>DUAHTOR was built to help — even offline.</strong>
								</div>
								
								<div class="cta-buttons">
									<a href="/#features" class="btn btn-secondary btn-hero">
										Watch Features
									</a>
									<a href="/#waitlist" class="btn btn-primary btn-hero">
										Join the Early Access Waitlist
									</a>
								</div>
								
								<div class="social-proof">
									<p class="social-proof-text">
										<strong>500+</strong> students already on the waitlist
									</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Pain Points Section (Mobile) -->
			<section class="pain-points-mobile-section" aria-labelledby="pain-points-title">
				<div class="container">
					<div class="section-header">
						<h2 id="pain-points-title" class="section-title">
							Common Learning Challenges
						</h2>
						<p class="section-subtitle">
							Issues that many students, parents, and teachers face daily
						</p>
					</div>
					<div class="mobile-pain-points-grid">
						<div class="mobile-pain-point-card fade-in-up" style="animation-delay: 0.1s">
							<div class="pain-icon" aria-hidden="true">🗣</div>
							<span class="pain-text">Struggling with homework?</span>
						</div>
						<div class="mobile-pain-point-card fade-in-up" style="animation-delay: 0.2s">
							<div class="pain-icon" aria-hidden="true">👩</div>
							<span class="pain-text">Too many students, too few teachers?</span>
						</div>
						<div class="mobile-pain-point-card fade-in-up" style="animation-delay: 0.3s">
							<div class="pain-icon" aria-hidden="true">📚</div>
							<span class="pain-text">Can't afford tutoring?</span>
						</div>
						<div class="mobile-pain-point-card fade-in-up" style="animation-delay: 0.4s">
							<div class="pain-icon" aria-hidden="true">🌐</div>
							<span class="pain-text">No reliable internet?</span>
						</div>
					</div>
				</div>
			</section>

			<!-- Why DUAHTOR Section -->
			<section class="why-duahtor-section" aria-labelledby="why-duahtor-title">
				<div class="container">
					<div class="section-header">
						<h2 id="why-duahtor-title" class="section-title">
							Why DUAHTOR?
						</h2>
					</div>
					<div class="why-duahtor-content">
						<h3 class="why-duahtor-headline">
							Because Every Liberian Child Deserves a Learning Ally.
						</h3>
						<p class="why-duahtor-description">
							DUAHTOR is a Liberian EdTech platform and AI-powered learning platform built in Liberia, for Liberia; where school isn't always easy, resources are limited, and families need support they can trust. Whether you're a student, teacher, or parent, DUAHTOR helps you learn better, teach smarter, and stay connected — even with little to no internet.
						</p>
					</div>
				</div>
			</section>

			<!-- Who DUAHTOR Helps Section -->
			<section id="who-its-for" class="who-helps-section" aria-labelledby="who-helps-title">
				<div class="container">
					<div class="section-header">
						<h2 id="who-helps-title" class="section-title">
							Who DUAHTOR Helps
						</h2>
						<h3 class="section-headline">
							💬 One App. For All Kinds of Learners.
						</h3>
					</div>
					
					<div class="target-groups-grid">
						<!-- Students Card -->
						<div class="target-group-card">
							<div class="card-content">
								<div class="icon-container">
									<div class="icon-wrapper">
										<span class="target-icon">👩🎓</span>
									</div>
								</div>
								<h3 class="card-title">Students</h3>
								<ul class="benefits-list">
									<li class="benefit-item">
										<span class="checkmark">✔</span>
										<span class="benefit-text">Get help with hard topics</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✔</span>
										<span class="benefit-text">Practice reading with voice tools</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✔</span>
										<span class="benefit-text">Track your own progress</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✔</span>
										<span class="benefit-text">Earn badges & level up</span>
									</li>
								</ul>
							</div>
						</div>

						<!-- Educators Card -->
						<div class="target-group-card">
							<div class="card-content">
								<div class="icon-container">
									<div class="icon-wrapper">
										<span class="target-icon">👩‍🏫</span>
									</div>
								</div>
								<h3 class="card-title">Educators</h3>
								<ul class="benefits-list">
									<li class="benefit-item">
										<span class="checkmark">✔</span>
										<span class="benefit-text">Save time on lesson prep</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✔</span>
										<span class="benefit-text">Use Liberia-aligned and global standard teaching tools</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✔</span>
										<span class="benefit-text">Plan offline lessons</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✔</span>
										<span class="benefit-text">Get insights into class performance</span>
									</li>
								</ul>
							</div>
						</div>

						<!-- Parents Card -->
						<div class="target-group-card">
							<div class="card-content">
								<div class="icon-container">
									<div class="icon-wrapper">
										<span class="target-icon">👩‍👧‍👦</span>
									</div>
								</div>
								<h3 class="card-title">Parents</h3>
								<ul class="benefits-list">
									<li class="benefit-item">
										<span class="checkmark">✔</span>
										<span class="benefit-text">See how your child is doing</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✔</span>
										<span class="benefit-text">Get suggestions to support them</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✔</span>
										<span class="benefit-text">Affordable learning without tutoring costs</span>
									</li>
								</ul>
							</div>
						</div>

						<!-- Lifelong Learners Card -->
						<div class="target-group-card">
							<div class="card-content">
								<div class="icon-container">
									<div class="icon-wrapper">
										<span class="target-icon">👴</span>
									</div>
								</div>
								<h3 class="card-title">Lifelong Learners</h3>
								<ul class="benefits-list">
									<li class="benefit-item">
										<span class="checkmark">✔</span>
										<span class="benefit-text">Take skills courses from DUAHTOR University</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✔</span>
										<span class="benefit-text">Learn at your own pace, anytime</span>
									</li>
									<li class="benefit-item">
										<span class="checkmark">✔</span>
										<span class="benefit-text">Study offline after work</span>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</section>

			<!-- Features Section -->
			<section id="features" class="how-it-works-section" aria-labelledby="features-title">
				<div class="container">
					<div class="section-header">
						<h2 id="features-title" class="section-title">
							Features
						</h2>
						<h3 class="section-headline">
							Learning Made Simple — Wherever You Are.
						</h3>
					</div>

					<!-- Features List -->
					<!-- Dev Note: Soft mockups or illustrations of app screens beside each feature description -->
					<div class="features-list">
						<!-- DUAHTOR Discovery Zone™ -->
						<div class="feature-item reverse">
							<div class="feature-content">
								<div class="feature-icon">🎨</div>
								<div class="feature-info">
									<h3 class="feature-title">DUAHTOR Discovery Zone™</h3>
									<p class="feature-description">
										Joyful Learning for Little Minds. A playful learning space designed just for Kindergarten learners. Children explore ABCs, 123s, beginner phonics (like so, go, lo, no), colors, shapes, animals, and more—through music, interactive visuals, and voice-based games that make learning feel like play.
									</p>
								</div>
							</div>
							<div class="feature-mockup">
								<div class="device-frame real-ui">
									<img 
										src="/ui/duahtor-mobile-splash-screen.jpg" 
										alt="DUAHTOR Discovery Zone Interface" 
										class="mobile-ui-image"
										loading="lazy"
									/>
								</div>
							</div>
						</div>

						<!-- Ask DUAHTOR -->
						<div class="feature-item">
							<div class="feature-content">
								<div class="feature-icon">📱</div>
								<div class="feature-info">
									<h3 class="feature-title">Ask DUAHTOR</h3>
									<p class="feature-description">
										Ask questions, get step-by-step explanations — in text or voice with emotional feedback. It adapts to your level and learning speed.
									</p>
								</div>
							</div>
							<div class="feature-mockup">
								<div class="device-frame real-ui">
									<img 
										src="/ui/duahtor-mobile-splash-screen.jpg" 
										alt="DUAHTOR Mobile App Splash Screen" 
										class="mobile-ui-image"
										loading="lazy"
									/>
								</div>
							</div>
						</div>

						<!-- Assignment Help -->
						<div class="feature-item reverse">
							<div class="feature-content">
								<div class="feature-icon">📝</div>
								<div class="feature-info">
									<h3 class="feature-title">Assignment Help</h3>
									<p class="feature-description">
										Snap or type your homework — DUAHTOR guides you through quiz-validated solutions. No direct copying, learners meet a quiz threshold of understanding.
									</p>
								</div>
							</div>
							<div class="feature-mockup">
								<div class="device-frame">
									<div class="device-content">
										<div class="assignment-mockup">
											<div class="upload-area">
												<div class="upload-icon">📤</div>
												<p class="upload-text">Photo uploaded!</p>
											</div>
											<div class="quiz-prompt">
												<h4>Understanding Check</h4>
												<p>Before we continue, can you tell me what this equation represents?</p>
												<div class="quiz-options">
													<button class="quiz-option">A) Distance formula</button>
													<button class="quiz-option active">B) Quadratic equation</button>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>

						<!-- Super Reading Coach -->
						<div class="feature-item">
							<div class="feature-content">
								<div class="feature-icon">📖</div>
								<div class="feature-info">
									<h3 class="feature-title">Super Reading Coach</h3>
									<p class="feature-description">
										Listen, follow, read, and record with self or AI-led sessions. Practice pronunciation and fluency. (Great for readers of all levels!)
									</p>
								</div>
							</div>
							<div class="feature-mockup">
								<div class="device-frame">
									<div class="device-content">
										<div class="reading-mockup">
											<div class="reading-header">
												<h4>Reading Practice</h4>
												<div class="audio-controls">
													<button class="play-btn">▶️</button>
													<button class="record-btn">🎤</button>
												</div>
											</div>
											<div class="reading-text">
												<p>The <span class="highlight-word">baobab</span> tree stands tall in the African savanna...</p>
											</div>
											<div class="pronunciation-guide">
												<strong>baobab</strong>: /ˈbaʊbæb/
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>

						<!-- Offline Learning Mode -->
						<div class="feature-item reverse">
							<div class="feature-content">
								<div class="feature-icon">📶</div>
								<div class="feature-info">
									<h3 class="feature-title">Offline Learning Mode</h3>
									<p class="feature-description">
										Save sessions when online, study them anytime — no data needed after that.
									</p>
								</div>
							</div>
							<div class="feature-mockup">
								<div class="device-frame">
									<div class="device-content">
										<div class="offline-mockup">
											<div class="offline-status">
												<span class="offline-icon">📶</span>
												<span class="status-text">Offline Mode Active</span>
											</div>
											<div class="saved-lessons">
												<div class="lesson-item">
													<span class="lesson-icon">📚</span>
													<span class="lesson-title">Mathematics - Algebra</span>
													<span class="download-status">✓</span>
												</div>
												<div class="lesson-item">
													<span class="lesson-icon">🧪</span>
													<span class="lesson-title">Chemistry - Elements</span>
													<span class="download-status">✓</span>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>

						<!-- Language Support -->
						<div class="feature-item">
							<div class="feature-content">
								<div class="feature-icon">🗣</div>
								<div class="feature-info">
									<h3 class="feature-title">Language Support</h3>
									<p class="feature-description">
										Available in English, French, Swahili, Arabic — with more coming.
									</p>
								</div>
							</div>
							<div class="feature-mockup">
								<div class="device-frame real-ui">
									<img 
										src="/ui/duahtor-mobile-login.jpg" 
										alt="DUAHTOR Mobile App Login Screen" 
										class="mobile-ui-image"
										loading="lazy"
									/>
								</div>
							</div>
						</div>

						<!-- Gamified Learning -->
						<div class="feature-item reverse">
							<div class="feature-content">
								<div class="feature-icon">🎮</div>
								<div class="feature-info">
